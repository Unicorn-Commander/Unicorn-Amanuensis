# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
#                          MODEL CONFIGURATION
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Whisper model size (tiny, base, small, medium, large, large-v2, large-v3)
# Larger models are more accurate but slower and require more memory
WHISPER_MODEL=base

# Language (auto for auto-detection, or specify: en, es, fr, de, zh, ja, etc.)
WHISPER_LANGUAGE=auto

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
#                          HARDWARE CONFIGURATION
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Hardware backend (auto, cpu, cuda, npu, igpu)
# auto = automatically detect and use best available
WHISPER_BACKEND=auto

# Legacy device setting (cpu, cuda) - kept for compatibility
WHISPER_DEVICE=auto

# Computation type (int8, float16, float32)
# int8 is fastest on CPU, float16 for GPU
COMPUTE_TYPE=int8

# Batch size for processing
# Higher values are faster but use more memory
BATCH_SIZE=16

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
#                          FEATURES
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Enable speaker diarization (requires HF_TOKEN)
ENABLE_DIARIZATION=true

# Hugging Face token for speaker diarization models
# Get your token from https://huggingface.co/settings/tokens
HF_TOKEN=

# Voice Activity Detection (VAD) - improves accuracy
ENABLE_VAD=true

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
#                          NETWORK CONFIGURATION
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# External host for remote access (domain or IP)
EXTERNAL_HOST=localhost

# External protocol (http or https)
EXTERNAL_PROTOCOL=http

# API Authentication (optional)
API_KEY=

# CORS origins (comma-separated, * for all)
CORS_ORIGINS=*

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
#                          PERFORMANCE TUNING
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Number of worker threads
NUM_WORKERS=4

# Maximum audio file size (MB)
MAX_FILE_SIZE=500

# Request timeout (seconds)
REQUEST_TIMEOUT=600

# Cache transcriptions
ENABLE_CACHE=true
CACHE_TTL=3600